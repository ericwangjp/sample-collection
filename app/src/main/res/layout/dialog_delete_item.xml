<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ly"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="@dimen/dimens300dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimens15dp"
        android:layout_marginRight="@dimen/dimens15dp"
        android:background="@drawable/shape_colorffffff"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/txt_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dimens20dp"
            android:gravity="center"
            android:text=""
            android:textColor="@color/color666666"
            android:textSize="@dimen/dimens17sp" />

        <TextView
            android:id="@+id/txt_content_version"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:paddingLeft="@dimen/dimens30dp"
            android:paddingRight="@dimen/dimens30dp"
            android:text=""
            android:textColor="@color/color999999"
            android:textSize="@dimen/dimens14sp"
            android:visibility="gone" />

        <View style="@style/splitLineStyle" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimens40dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/shape_colorffffff_radius_0030"
                android:text=""
                android:textColor="@color/color656565"
                android:textSize="@dimen/dimens16sp" />

            <View
                android:layout_width="@dimen/dimens1px"
                android:layout_height="fill_parent"
                android:background="@color/colorEEEEEE" />

            <Button
                android:id="@+id/btn_delete"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/shape_colore4484c_radius_0003"
                android:text=""
                android:textColor="@color/colorE4484C"
                android:textSize="@dimen/dimens16sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>